<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantApp.HomePage"
             Title="HomePage"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="50,220">
        <StackLayout Orientation="Horizontal">
            <Image Source="avatar.png" Aspect="AspectFill"></Image>
            <Label Text="Laura's Cafe" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Title" FontAttributes="Bold" WidthRequest="200" Padding="60,0,0,0"/>
        </StackLayout>
        <Grid Grid.Row="1" RowDefinitions="200,200,200" ColumnDefinitions="200,200,200" RowSpacing="5" ColumnSpacing="5">
            <BoxView Grid.Row="0" >
            </BoxView>
            <BoxView Grid.Row="1" >
            </BoxView>
            <BoxView Grid.Row="2" >
            </BoxView>
            <BoxView Grid.Row="0" Grid.Column="1" >
            </BoxView>
            <BoxView Grid.Row="1" Grid.Column="1">
            </BoxView>
            <BoxView Grid.Row="2" Grid.Column="1">
            </BoxView>
        </Grid>
        
        
    </Grid>

</ContentPage>